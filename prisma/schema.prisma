generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL") // uses connection pooling
}

model Expense {
  id          Int      @id @default(autoincrement())
  date        String
  description String
  withdraw    String
  received    String
}

model MetalPurchase {
  id        Int     @id @default(autoincrement())
  date      String
  metalType String
  rate      String
  grams     String
  amount    String
  vendor    String
  paid      String
}

model Purchase {
  id         Int      @id @default(autoincrement())
  date       DateTime
  vendor     String
  grams      Float
  weight     Float
  pricePerCt Float
  amount     Float
  invoiceId  Int?
  invoice    Invoice? @relation(fields: [invoiceId], references: [id])
}

model Invoice {
  id           Int        @id @default(autoincrement())
  invoiceNumber String
  vendorName   String
  purchases    Purchase[]
}

model Job {
  id    String   @id @default(uuid())
  name  String
  castings Casting[]
  edits Edit[]
  diamonds Diamond[]
}

model Casting {
  id          String @id @default(uuid())
  date        String
  caster      String
  goldSilver  String
  castingWeight String
  pureWeight  String
  jobId       String
  job         Job    @relation(fields: [jobId], references: [id])
}

model Edit {
  id           String @id @default(uuid())
  stepType     String
  weightBefore String
  weightAfter  String
  polishGuy    String
  jobId        String
  job          Job    @relation(fields: [jobId], references: [id])
}

model Diamond {
  id                    String @id @default(uuid())
  setterName            String
  beforeWeight          String
  afterWeight           String
  diamondWeight         String
  diamondQuality        String
  settingDustWeight     String
  totalLoss             String
  totalNumberDiamondSet String
  totalCt               String
  returnCt              String
  brokenDiamondNumber   String
  brokenDiamondCt       String
  jobId                 String
  job                   Job    @relation(fields: [jobId], references: [id])
}