generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL") // uses connection pooling
}

model Expense {
  id          Int      @id @default(autoincrement())
  date        String
  description String
  withdraw    String
  received    String
}

model MetalPurchase {
  id        Int     @id @default(autoincrement())
  date      String
  metalType String
  rate      String
  grams     String
  amount    String
  vendor    String
  paid      String
}

model Invoice {
  id            Int        @id @default(autoincrement())
  invoiceNumber String
  vendorName    String
  purchases     Purchase[]
}

model Purchase {
  id         Int      @id @default(autoincrement())
  date       String
  vendor     String
  grams      String
  weight     String
  pricePerCt String
  amount     String
  invoiceId  Int
  invoice    Invoice   @relation(fields: [invoiceId], references: [id])
}